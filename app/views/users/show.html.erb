<main id="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/sidebar' %>

      <div class="col-sm-9" id="user-show-page">
        <div class="row">
        		<div class="panel panel-default">
        			<div class="panel-heading">
        				<a href="#myCollapse" data-toggle="collapse" aria-expanded="true">
        					<h3 class="panel-title">Account Overview</h3>
        				</a>
        			</div>
							
							<div id="myCollapse">
	        			<div class="panel-body">
	        				<div class="form">
	        					<div class="row">
			        				<div class="col-md-4">
			        					<div class="form-group">
			        						<label>Fullname</label>
			        						<input type="text" class="form-control" disabled value="<%= current_user.fullname %>">
			        					</div>
			        				</div>

			        				<div class="col-md-4">
			        					<div class="form-group">
			        						<label>Email</label>
			        						<input type="text" class="form-control" disabled value="<%= current_user.email %>">
			        					</div>
			        				</div>

			        				<div class="col-md-4">
			        					<div class="form-group">
			        						<label>Phone</label>
			        						<input type="text" class="form-control" disabled value="<%= current_user.phone %>">
			        					</div>
			        				</div>

			        				<div class="col-md-4">
			        					<div class="form-group">
			        						<label>Role</label>
			        						<input type="text" class="form-control" disabled value="<%= current_user.role %>">
			        					</div>
			        				</div>

			        				<div class="col-md-4">
			        					<div class="form-group">
			        						<label>Occupation</label>
			        						<input type="text" class="form-control" disabled value="<%= current_user.job %>">
			        					</div>
			        				</div>
			        			</div>
		        			</div>
	        			</div>

	        			<div class="panel-footer clearfix">
	        				<%= link_to("Edit Details", edit_user_registration_path, class: 'btn btn-green pull-right') %>
	        			</div>
	        		</div>
        		</div>
        </div>
      </div>
    </div>
  </div>
</main>