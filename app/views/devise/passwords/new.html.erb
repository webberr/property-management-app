<main id="wrapper" class="login_bg-img">
  <div class="container login">
    <div class="row">
      <div class="section-title text-center">
        <h3>Forgot your password?</h3><hr>
      </div>
      <div class="col-xs-8 col-xs-offset-2 col-sm-5 col-sm-offset-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>

				  <div class="form-group <%= 'has-error' if resource_has_error?(resource, :email) %>">
				    <%= f.label :email, class: 'control-label' %><br />
				    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email...", class: 'form-control' %>
            <% if resource_has_error?(resource, :email) %>
              <small class="help-block">
                <%= get_resource_error(resource, :email) %>
              </small>
            <% end %>
				  </div>

				  <div class="form-group">
				    <%= f.submit "Send me reset password instructions", class: 'btn btn-green' %>
				  </div>
				<% end %>
      </div>
    </div>
  </div>
</main>