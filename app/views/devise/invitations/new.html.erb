<main id="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/sidebar' %>

      <div class="col-sm-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">Add New Employee</h4>
          </div>

          <div class="panel-body table-responsive">
            <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, class: 'form'} do |f| %>
						  <%= devise_error_messages! %>

						  <% resource.class.invite_key_fields.each do |field| -%>
						    <div class="form-group">
						    	<%= f.label field %>
						    	<%= f.text_field field, class: 'form-control', placeholder: 'Enter Employee Email...' %>
						    </div>
						  <% end -%>

						  <p><%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-green' %></p>
						<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>