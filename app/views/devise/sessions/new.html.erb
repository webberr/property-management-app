<main id="wrapper" class="login_bg-img">
  <div class="container login">
    <div class="row">
      <div class="section-title text-center">
        <h3>Login</h3><hr>
      </div>
      <div class="col-xs-8 col-xs-offset-2 col-sm-5 col-sm-offset-4">
        <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form'} do |f| %>  
          <div class="form-group">
            <%= f.label :email do %>
              Email <small>(required)</small>
            <% end %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email' %>
          </div>

          <div class="form-group">
            <%= f.label :password do %>
              Password <small>(required)</small>
            <% end %>
            <%= f.password_field :password, class: 'form-control', placeholder: "Enter Password" %>
          </div><br>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-danger btn-block" %>
          </div>

          <%= link_to("Forgot Password?", new_user_password_path, {style: 'color: #fff;'}) %>
        <% end %>
      </div>
    </div>
  </div>
</main>
