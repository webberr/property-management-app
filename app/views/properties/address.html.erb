<main id="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/sidebar' %>

      <div class="col-sm-9">
      	<%= render 'shared/new_property_menu' %>
      	
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">Property Location</h4>
          </div>

          <div class="panel-body">
          	<%= form_for @property, html: {class: 'form'} do |f| %>
              <div class="form-group">
                <%= f.label :address, "Property Location" %>
                <%= f.text_field :address, placeholder: "Enter property address...", class: 'form-control', required: true %>
              </div>

              <div class="form-group">
                <%= f.submit "Save", class: "btn btn-green" %>
              </div>
          	<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>