<main id="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/sidebar' %>

      <div class="col-sm-9">
      	<%= render 'shared/new_property_menu' %>
      	
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">Property Listing</h4>
          </div>

          <div class="panel-body">
          	<%= form_for @property, html: {class: 'form'} do |f| %>
              <div class="row">
                <div class="col-sm-4 select">
                  <div class="form-group">
                    <label>Bedrooms</label>
                    <%= f.select :bedroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], id: 'bedroom', propmt: 'Select...', class: 'form-control' %>
                  </div>
                </div>

                <div class="col-sm-4 select">
                  <div class="form-group">
                    <label>Bathrooms</label>
                    <%= f.select :bathroom, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], id: 'bathroom', propmt: 'Select...', class: 'form-control' %>
                  </div>
                </div>

                <div class="col-sm-4 select">
                  <div class="form-group">
                    <label>Size</label>
                    <%= f.text_field :size, placeholder: 'Property size...', class: 'form-control' %>
                  </div>
                </div>

                <div class="col-sm-4 select">
                  <div class="form-group">
                    <label>Property Type</label>
                    <%= f.select :property_type, [["Condos", 'condo'], ["House", 'house'], ["Land", 'land'], ["TownHouse", 'townhouse'], ["Other", 'other']], id: 'property_type', prompt: 'Select...', class: 'form-control' %>
                  </div>
                </div>

                <div class="col-sm-4 select">
                  <div class="form-group">
                    <label>Listing Type</label>
                    <%= f.select :listing_type, [["Sale", 'sale'], ["Lease", 'lease'], ["Rental", 'rental']], id: 'listing_type', prompt: 'Select...', class: 'form-control' %>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.submit 'Update Listing', class: 'btn btn-green' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>