<main id="wrapper">
  <div class="container">
    <div class="row">
      <%= render 'shared/sidebar' %>

      <div class="col-sm-9">
      	<%= render 'shared/new_property_menu' %>
      	
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">Property Description</h4>
          </div>

          <div class="panel-body">
          	<%= form_for @property, html: { class: 'form' } do |f| %>
              <% if !@property.new_record? %>
                <div class="form-group">
                  <%= f.label :title, 'Listing Title' %>
                  <%= f.text_field :title, class: 'form-control', placeholder: 'Enter listing title...', required: true %>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.label :description, "Description" %>
                <%= f.text_area :description, rows: 5, placeholder: "Enter description of property...", class: 'form-control', required: true %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "Update Listing", class: "btn btn-green" %>
              </div>
          	<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>