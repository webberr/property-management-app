<% if user_signed_in? %>
	<% if (current_user.is_admin? || current_user.is_staff?) %>
		<div class="widget">
			<h4>Add New Tenant</h4><hr>
			<%= form_for([obj, obj.leases.new], html: {class: 'form'}) do |f| %>
				
				<div class="form-group">
					<%= f.text_field :start_date, class: 'form-control', placeholder: "Lease Start Date" %>
				</div>

				<div class="form-group">
					<%= f.text_field :end_date, class: 'form-control', placeholder: "Lease End Date" %>
				</div>

				<div class="form-group">
					<%= email_field_tag :email, "", class: 'form-control', placeholder: 'Enter tenant new email', required: true %>
				</div>
				
				<%= f.submit 'Add Tenant', class: 'btn btn-green btn-block', disabled: false %>
			<% end %>
		</div>
	<% end %>
<% end %>

<script>
	$(function() {
		$("#lease_start_date").datepicker({
			dateFormat: "dd-mm-yy"
		});

		$("#lease_end_date").datepicker({
			dateFormat: "dd-mm-yy"
		});
	});
</script>